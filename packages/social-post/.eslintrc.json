{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "rules": {
    "no-console": ["error", { "allow": ["error", "warn"] }],
    "one-var": "off",
    "sort-imports": "off",
    "max-lines": "off",
    "max-statements": "off"
  },
  "ignorePatterns": ["webpack.config.ts"]
}
